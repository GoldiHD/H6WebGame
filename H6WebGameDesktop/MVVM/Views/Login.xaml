<Page x:Class="H6WebGameDesktop.MVVM.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:H6WebGameDesktop.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="316,154,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="384,154,0,0" TextWrapping="Wrap" Text="{Binding Model.Username}" VerticalAlignment="Top" Width="120" />
        <Label Content="Password" HorizontalAlignment="Left" Margin="320,198,0,0" VerticalAlignment="Top" Foreground="White"/>
        <PasswordBox Margin="384,198,0,0" VerticalAlignment="Top" Height="26" Name="PBPassword" HorizontalAlignment="Left" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="354,266,0,0" VerticalAlignment="Top" Width="122" Height="36" Command="{Binding UseLoginCommand}"/>
        <Button Content="Create Account" HorizontalAlignment="Left" Margin="354,322,0,0" VerticalAlignment="Top" Width="122" Height="38" Command="{Binding UseCreateAccountCommand}"/>

    </Grid>
</Page>
